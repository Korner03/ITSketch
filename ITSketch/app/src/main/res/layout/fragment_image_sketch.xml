<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="@android:color/background_light">

    <ImageView
        android:id="@+id/full_sketch"
        android:layout_width="match_parent"
        android:layout_height="599dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:contentDescription="@string/current_image_taken"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tools"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/tools"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/full_sketch"
        android:background="@color/control_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/clear"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginStart="2dp"
            android:text="@string/clear" />

        <ImageButton
            android:id="@+id/line"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="@string/description_info"
            android:cropToPadding="true"
            android:src="@drawable/line" />

        <ImageButton
            android:id="@+id/free_rect"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="@string/description_info"
            android:cropToPadding="true"
            android:src="@drawable/polygon" />

        <ImageButton
            android:id="@+id/circle"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/description_info"
            android:cropToPadding="true"
            android:src="@drawable/circle" />

        <ImageButton
            android:id="@+id/rect"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:contentDescription="@string/description_info"
            android:cropToPadding="true"
            android:src="@drawable/rect" />

        <Button
            android:id="@+id/save"
            style="@android:style/Widget.Material.Light.Button.Inset"
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:layout_weight="1"
            android:layout_marginEnd="2dp"
            android:text="@string/Done" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>