<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/container_main"
    android:background="@drawable/win_xp_back"
    tools:context="com.postpc.cabby333.myapplication.MainActivity"
    android:layoutDirection="ltr" android:layout_height="match_parent"
    android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearButtons"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <ImageView android:id="@+id/imageView2"
            android:layout_height="147dp"
            android:layout_width="match_parent"
            app:srcCompat="@drawable/tagar"
            android:fadingEdge="none|vertical"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="25dp"/>

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text=""/>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/my_houses"
                style="@android:style/Widget.Material.Light.Button.Inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/my_houses_new"
                android:layout_marginEnd="2dp"/>

            <ImageButton
                android:id="@+id/new_house"
                style="@android:style/Widget.Material.Light.Button.Inset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/new_house_new"
                android:layout_marginEnd="2dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/txt_my_houses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="    My Houses                    Add New House"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/first_time_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="45dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/first_time_user"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="?android:attr/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold|italic" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_copy_rights"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="@string/copyrights"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>